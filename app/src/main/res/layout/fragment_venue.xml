<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.venue.VenueFragment">

    <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/venueImage"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:elevation="15dp"
        android:layout_marginTop="5dp"
        android:src="@drawable/ic_hotel"
        app:civ_border_color="#FF000000"
        app:civ_border_width="2dp" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/bg_white"
        android:elevation="10dp"
        android:padding="15dp">

        <TextView
            android:id="@+id/txtEventVenue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/poppins_bold"
            android:text="@string/venue_name"
            android:textColor="@color/gray" />

        <TextView
            android:id="@+id/txtEventVenueName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/poppins_semi_bold"
            android:text="Hotel Sheraton"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/txtEventDateHead"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtEventVenueName"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/poppins_bold"
            android:text="@string/event_date"
            android:textColor="@color/gray" />

        <TextView
            android:id="@+id/txtEventDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtEventVenue"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/poppins_semi_bold"
            android:text="30th June - 2 July"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/txtVenueAddressHead"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtEventDate"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/poppins_bold"
            android:text="@string/venue_address"
            android:textColor="@color/gray" />

        <TextView
            android:id="@+id/txtVenueAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtEventDate"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@id/txtVenueAddressHead"
            android:fontFamily="@font/poppins_medium"
            android:gravity="end"
            android:paddingStart="25dp"
            android:text="Hotel Sheraton, abc Road, Cannaught place, Delhi 110001"
            android:textAllCaps="true"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/txtVenueLink"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtVenueAddress"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/button_bg"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/roboto_black"
            android:text="@string/venue_address_link"
            android:paddingStart="25dp"
            android:paddingEnd="25dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:textColor="@color/white" />

    </RelativeLayout>



</RelativeLayout>