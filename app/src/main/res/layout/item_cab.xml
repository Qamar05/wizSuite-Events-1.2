<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/itemCabCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:elevation="5dp"
        app:cardCornerRadius="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/cab_bg_2"
            android:padding="15dp">

            <RelativeLayout
                android:id="@+id/rlCabDetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/txtCabNumberHead"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/poppins_semi_bold"
                    android:text="@string/cab_number"
                    android:textSize="12sp"
                    android:textColor="?android:textColorPrimary" />

                <TextView
                    android:id="@+id/txtCabNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_toEndOf="@id/txtCabNumberHead"
                    android:fontFamily="@font/poppins_bold"
                    android:text="DL 7S AT 2345"
                    android:textAllCaps="true"
                    android:textSize="12sp"
                    android:layout_marginStart="5dp"
                    android:textColor="@color/purple_700" />

                <TextView
                    android:id="@+id/txtDriverName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/poppins_semi_bold"
                    android:text="Hari Kumar"
                    android:textSize="12sp"
                    android:textColor="?android:textColorPrimary" />

                <TextView
                    android:id="@+id/txtCabSource"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/txtCabNumberHead"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/poppins_semi_bold"
                    android:text="@string/pickup_point"
                    android:textColor="?android:textColorSecondary"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/txtCabDestination"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/txtDriverName"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/poppins_semi_bold"
                    android:text="@string/drop_point"
                    android:textColor="?android:textColorSecondary"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/txtCabSourceCode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/txtCabSource"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/poppins_bold"
                    android:text="IGI Airport"
                    android:textColor="?android:textColorPrimary"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/txtCabDestinationCode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/txtCabDestination"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/poppins_bold"
                    android:text="Hotel Sheraton"
                    android:textColor="?android:textColorPrimary"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/txtPickupTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/txtCabSourceCode"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="5dp"
                    android:fontFamily="@font/poppins_semi_bold"
                    android:text="Apr 3, 2023 5:30 am"
                    android:textColor="?android:textColorPrimary"
                    android:textSize="13sp" />


                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_below="@id/txtCabNumber"
                    android:layout_marginTop="7dp"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/ic_two_way_arrows"
                    app:tint="?android:textColorPrimary" />
            </RelativeLayout>

            <TextView
                android:id="@+id/txtDescriptionHead"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/rlCabDetails"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/poppins_semi_bold"
                android:text="@string/description"
                android:textColor="?android:textColorPrimary"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/txtDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txtDescriptionHead"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:fontFamily="@font/poppins_medium"
                android:paddingBottom="15dp"
                android:text="This is a dummy text to check the description, this is a dummy text to check the description, this is a dummy text to check the description"
                android:textColor="?android:textColorSecondary"
                android:textSize="12sp" />


        </RelativeLayout>

    </androidx.cardview.widget.CardView>




    <TextView
        android:id="@+id/txtWhatsAppDriver"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/itemCabCard"
        android:layout_marginEnd="50dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="-30dp"
        android:layout_marginBottom="5dp"
        android:layout_alignParentEnd="true"
        android:background="@drawable/button_bg"
        android:padding="5dp"
        android:elevation="6dp"
        android:fontFamily="@font/roboto_black"
        android:textColor="@color/white"
        app:drawableStartCompat="@drawable/ic_whatsapp" />

    <TextView
        android:id="@+id/txtCallDriver"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/itemCabCard"
        android:layout_marginTop="-30dp"
        android:layout_marginBottom="5dp"
        android:layout_toStartOf="@id/txtWhatsAppDriver"
        android:background="@drawable/button_bg"
        android:padding="5dp"
        android:elevation="6dp"
        android:fontFamily="@font/roboto_black"
        android:textColor="@color/white"
        app:drawableStartCompat="@drawable/ic_calling" />
</RelativeLayout>